# makefile to build sample program

include ../../platform.mk
include ../../../sample.mk

all : writer$(EXE) reader$(EXE)

HFILES = $(PERCPPHFILES)
LIBFILES = $(LIBDIR)/$(PERLIBNAME) $(LIBDIR)/$(RTLIBNAME)
LINKLIBS = $(PSLIBS)

OBJECTS = \
H323-MESSAGES$(OBJ) \
H235-SECURITY-MESSAGES$(OBJ) \
H323-MESSAGESEnc$(OBJ) \
H235-SECURITY-MESSAGESEnc$(OBJ) \
H323-MESSAGESDec$(OBJ) \
H235-SECURITY-MESSAGESDec$(OBJ)

PRINT_OBJECTS = \
H323-MESSAGESPrtToStrm$(OBJ) \
H235-SECURITY-MESSAGESPrtToStrm$(OBJ)

writer$(EXE) : writer$(OBJ) $(OBJECTS) $(PRINT_OBJECTS) $(LIBFILES)
	$(LINK) writer$(OBJ) $(OBJECTS) $(PRINT_OBJECTS) $(LINKOPT) \
	$(LPATHS) $(LINKLIBS)

reader$(EXE) : reader$(OBJ) $(OBJECTS) $(PRINT_OBJECTS) $(LIBFILES)
	$(LINK) reader$(OBJ) $(OBJECTS) $(PRINT_OBJECTS) $(LINKOPT) \
	$(LPATHS) $(LINKLIBS)

reader$(OBJ) : reader.cpp H323-MESSAGES.h H235-SECURITY-MESSAGES.h $(HFILES)
	$(CCC) $(CCFLAGS) -c $(IPATHS) reader.cpp

writer$(OBJ) : writer.cpp H323-MESSAGES.h H235-SECURITY-MESSAGES.h $(HFILES)
	$(CCC) $(CCFLAGS) -c $(IPATHS) writer.cpp

H323-MESSAGES$(OBJ) : H323-MESSAGES.cpp H323-MESSAGES.h \
H235-SECURITY-MESSAGES.h $(HFILES)
H323-MESSAGESEnc$(OBJ) : H323-MESSAGESEnc.cpp H323-MESSAGES.h \
H235-SECURITY-MESSAGES.h $(HFILES)
H323-MESSAGESDec$(OBJ) : H323-MESSAGESDec.cpp H323-MESSAGES.h \
H235-SECURITY-MESSAGES.h $(HFILES)

H235-SECURITY-MESSAGES$(OBJ) : \
H235-SECURITY-MESSAGES.cpp H235-SECURITY-MESSAGES.h $(HFILES)
H235-SECURITY-MESSAGESEnc$(OBJ) : \
H235-SECURITY-MESSAGESEnc.cpp H235-SECURITY-MESSAGES.h $(HFILES)
H235-SECURITY-MESSAGESDec$(OBJ) : \
H235-SECURITY-MESSAGESDec.cpp H235-SECURITY-MESSAGES.h $(HFILES)

H323-MESSAGESPrtToStrm$(OBJ) : H323-MESSAGESPrtToStrm.cpp H323-MESSAGES.h \
H235-SECURITY-MESSAGES.h $(HFILES)

H235-SECURITY-MESSAGESPrtToStrm$(OBJ) : \
H235-SECURITY-MESSAGESPrtToStrm.cpp H235-SECURITY-MESSAGES.h $(HFILES)

H323-MESSAGES.cpp H323-MESSAGESDec.cpp H323-MESSAGESEnc.cpp \
H323-MESSAGESPrtToStrm.cpp H323-MESSAGES.h : h225.asn h323.cfg $(ASN1C)
	$(ASN1C) h225.asn -c++ -per -trace -prttostrm -config h323.cfg -strict-size -x64

H235-SECURITY-MESSAGES.cpp H235-SECURITY-MESSAGESEnc.cpp \
H235-SECURITY-MESSAGESDec.cpp H235-SECURITY-MESSAGESPrtToStrm.cpp \
H235-SECURITY-MESSAGES.h : h235.asn h323.cfg $(ASN1C)
	$(ASN1C) h235.asn -c++ -per -trace -prttostrm -config h323.cfg -strict-size -x64

clean :
	$(RM) H*-MESSAGES*.cpp
	$(RM) H*-MESSAGES.h
	$(RM) *$(OBJ)
	$(RM) *.exp
	$(RM_MSVC_FILES)
	$(RM) message.dat
	$(RM) *.lib
	$(RM) *.log
	$(RM) *~
	$(RM) writer$(EXE)
	$(RM) reader$(EXE)
	$(RM) rtkey.h

